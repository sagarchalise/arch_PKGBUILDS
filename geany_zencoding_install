pkgname=geany-zencoding

pre_install() {
  echo "/usr/lib/geany" > `python2 -c "import distutils.sysconfig; print (distutils.sysconfig.get_python_lib(0,0));"`/geany-zencoding.pth
}

post_remove() {
  rm -rf `python2 -c "import distutils.sysconfig; print (distutils.sysconfig.get_python_lib(0,0));"`/geany-zencoding.pth
}
