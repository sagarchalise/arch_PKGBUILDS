# $Id$
# Maintainer: Sagar Chalise <chalisesagar@gmail.com>
pkgname=geany-zencoding
pkgver=0.21
pkgrel=1
pkgdesc="https://github.com/codebrainz/geany-zencoding"
arch=('x86_64' 'i686')
url="https://github.com/codebrainz/geany-zencoding"
license=('GPL2')
depends=('geany' 'python2' 'geany-plugins')
install=geany-zencoding.install
makedepends=('intltool')
source=("https://github.com/codebrainz/geany-zencoding/tarball/master" "geany-zencoding.patch")
md5sums=('2c85484e01eec27db821a24d52d0567a'
         '010252ba0d88a4d1ab820942c1b23f44')

build() {
  cd "$srcdir/codebrainz-geany-zencoding-8efa7a9/"
  patch -p1 -i ../geany-zencoding.patch
  ./autogen.sh
  ./configure --prefix=$(dirname $(dirname $(which geany)))
  make 
}

package() {
  cd "$srcdir/codebrainz-geany-zencoding-8efa7a9/"
  make DESTDIR="$pkgdir" install
}
